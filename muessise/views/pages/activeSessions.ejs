<style>
  .dt-column-order {
    display: none !important;
  }
  table,
  thead,
  table.dataTable > thead > tr > th,
  table.dataTable > thead > tr > td,
  table.dataTable > tbody > tr:last-child > *,
  div.dt-container.dt-empty-footer tbody > tr:last-child > * {
    border: none;
    font-weight: 400;
  }
  td {
    padding: 20px;
  }
  .custom-date::-webkit-calendar-picker-indicator {
    display: none;
    -webkit-appearance: none;
  }
</style>
<div class="pt-3 px-5">
  <div class="flex flex-col gap-6">
    <div
      class="flex items-center gap-3 text-[13px] text-messages dark:text-primary-text-color-dark font-medium"
    >
      <div class="flex items-center gap-2">
        <a
          href="/"
          class="cursor-pointer hover:text-primary dark:hover:text-primary-dark"
          ><%= __('activeSessions.firstBreadcrumb')%></a
        >
        <div class="icon stratis-slash-01-forward"></div>
      </div>
      <di class="flex items-center gap-2">
        <a
          href="/settings"
          class="cursor-pointer hover:text-primary dark:hover:text-primary-dark"

          ><%= __('activeSessions.secondBreadcrumb')%></a
        >
        </a>
        <div class="icon stratis-slash-01-forward"></div>
      </di>
      <!-- <a class="text-tertiary-text dark:text-tertiary-text-color-dark"> -->
        <!-- Aktiv sessiyalar -->
        <!-- <%= __("breadcrumb_aktiv_sessiyalar") %> -->
      <!-- </a> -->
      <a class="text-tertiary-text dark:text-tertiary-text-color-dark"
        ><%= __('activeSessions.thirdBreadcrumb')%></a
      >
    </div>
    <div>
      <div class="flex flex-col gap-3">
        <div
          class="pb-3 flex items-center justify-between border-b-[.5px] border-stroke dark:border-[#FFFFFF1A]"
        >
          <div
            class="text-[15px] text-messages dark:text-primary-text-color-dark font-medium pt-[5px]"
          >
            <!-- Aktiv sessiyalar (8) -->
            <!-- <%= __("aktiv_sessiyalar") %> -->

             <%= __('activeSessions.sessionsCount')%>( <%= sessionCount %> )
          </div>
          <div class="flex items-center gap-2">
            <div
              class="relative flex items-center w-[237px] border border-surface-variant dark:border-surface-variant-dark rounded-full overflow-hidden focus-within:border-focus dark:focus-within:border-focus-color-dark hover:bg-input-hover dark:hover:bg-input-hover-dark"
            >
              <input
                id="customSearch"
                type="text"
                placeholder="<%= __('activeSessions.search_placeholder') %>"
                class="w-full h-full bg-transparent border-none focus:outline-none outline-none ring-0 focus:ring-0 text-[13px] placeholder:text-on-surface-variant-dark dark:placeholder:text-[#636B6F] dark:text-primary-text-color-dark"
              />
              <div class="absolute right-3">
                <div
                  class="icon stratis-search-02 dark:text-primary-text-color-dark"
                ></div>
              </div>
            </div>

            <div
              id="refreshSettingsBtn"
              onclick="refreshPage()"
              class="w-[155px] border cursor-pointer border-surface-variant dark:border-surface-variant-dark rounded-full flex items-center justify-center gap-2 text-[13px] text-messages dark:text-primary-text-color-dark hover:text-focus dark:hover:text-focus-color-dark font-medium py-[6.5px] px-[18px]"
            >
              <!-- <a href="#"> -->
                <!-- Səhifəni yenilə -->
                <!-- <%= __("sehifeni_yenile") %> -->
              <!-- </a> -->
              <a><%= __('activeSessions.reload')%> </a>
              <a
                
                class="icon stratis-arrow-refresh-04 text-messages dark:text-primary-text-color-dark"
              ></a>
            </div>
            <div
              onclick="openFilterModal()"
              class="w-[92px] cursor-pointer border border-surface-variant dark:border-surface-variant-dark rounded-full flex items-center justify-center gap-2 text-[13px] text-messages dark:text-primary-text-color-dark hover:text-focus dark:hover:text-focus-color-dark font-medium py-[6.5px] px-[18px]"
            >
              <a
                href="#"
                class="icon stratis-filter text-messages dark:text-primary-text-color-dark mt-[2.5px]"
              ></a>
              <a href="#" class=""><%= __('activeSessions.filter')%></a>
            </div>
          </div>
        </div>

        <table id="myTable" class="table-fixed border-collapse w-full">
          <thead class="border-none pb-0.5">
            <tr
              class="bg-container-2 dark:bg-container-2-dark border-none text-xs text-tertiary-text dark:text-tertiary-text-color-dark font-base"
            >
              <th
                class="w-[58px] border-r-[.5px] border-r-stroke dark:border-[#FFFFFF1A] px-4 py-2 rounded-l-lg"
              >
                <input type="checkbox" id="tableCheckbox" class="peer hidden" />
                <label
                  for="tableCheckbox"
                  class="cursor-pointer bg-menu dark:bg-menu-dark border border-surface-variant dark:border-surface-variant-dark rounded-[2px] w-[18px] h-[18px] flex items-center justify-center text-on-primary dark:text-menu-dark peer-checked:bg-primary dark:peer-checked:bg-primary-dark peer-checked:text-on-primary dark:peer-checked:text-on-primary-dark peer-checked:border-primary dark:peer-checked:border-primary-dark transition"
                >
                  <div class="icon stratis-check-01 scale-60"></div>
                </label>
              </th>
              <th
                class="w-1/3 border-r-[.5px] border-r-stroke dark:border-[#FFFFFF1A] px-4 py-2 filtering"
              >
                <%= __('activeSessions.deviceName')%>
              </th>
              <th
                class="w-1/3 border-r-[.5px] border-r-stroke dark:border-[#FFFFFF1A] px-4 py-2 filtering"
              >
                <!-- Giriş tarixi -->
                <!-- <%= __("giris_tarixi") %> -->
                <%= __('activeSessions.loginDate')%>
              </th>
              <th
                class="w-1/3 border-r-[.5px] border-r-stroke dark:border-[#FFFFFF1A] px-4 py-2 filtering"
              >
                <!-- Location -->
                <!-- <%= __("location") %> -->
                <%= __('activeSessions.location')%>
              </th>
              <th class="w-10 px-4 py-2 rounded-r-lg"></th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% scripts = `
<script src="/js/datatables/datatables.min.js"></script>
<script src="/js/settings/settings.js"></script>
<script src="/js/settings/settingsTable.js"></script>
<script>
  document.querySelectorAll(".otp-modal").forEach((modal) => {
    modal.querySelector(".close-btn")?.addEventListener("click", () => {
      modal
        .querySelectorAll("input[type='text'], input[type='number']")
        .forEach((input) => {
          input.value = "";
        });
    });
  });
</script>
` %>
