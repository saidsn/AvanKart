                    <select id="realSelect2" name="purpose" class="hidden">
                      <option value="">
                        <!-- Seçim edin -->
                        <%= __("sorgular.sorgular.sechim_edin") %>
                      </option>
                      <% if(subcategories) subcategories.forEach(sub => { %>
                        <option value="<%= sub.name %>">
                          <!-- İstifadəçiləri balanslarına mədaxil edə bilmirəm -->
                          <%= sub.name %>
                        </option>
                        <% }) %>
                    </select>
                </div>
              </div>

