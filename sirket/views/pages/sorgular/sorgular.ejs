                <div class="flex items-center gap-0.5 my-1.5">
                  <span class="text-[12px] font-medium opacity-65"
                    >
                    <!-- Sorğu kateqoriyası -->
                    <%= __("sorgular.sorgular.sorgu_kategoriyasi") %>
                    </span
                  >
                  <div
                    class="icon stratis-help-circle-contained opacity-65 w-3 h-3"
                  ></div>
                </div>
