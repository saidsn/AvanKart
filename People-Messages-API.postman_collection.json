        "method": "GET",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json",
            "type": "text"
          },
          {
            "key": "Authorization",
            "value": "Bearer {{people_auth_token}}",
            "type": "text"
          }
        ],
        "url": {
          "raw": "{{base_url}}/sorgu/reasons",
          "host": ["{{base_url}}"],
          "path": ["sorgu", "reasons"]
